<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenerateActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="20dp">

        <View
            android:id="@+id/shadow_title"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="#F9F9F9" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:text="TITLE"
            android:textColor="#666666"
            android:textFontWeight="500"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/value_title_generate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="text"
            android:text="Title"
            android:textAllCaps="true"
            android:textColor="#262626"
            android:textFontWeight="400"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="10dp">

        <View
            android:id="@+id/shadow_content"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="#F9F9F9" />

        <TextView
            android:id="@+id/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:text="CONTENT"
            android:textColor="#666666"
            android:textFontWeight="500"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/value_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="text"
            android:text="Content"
            android:textAllCaps="true"
            android:textColor="#262626"
            android:textFontWeight="400"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="10dp">

        <View
            android:id="@+id/shadow_quantity"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="#F9F9F9" />

        <TextView
            android:id="@+id/text_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:text="QUANTITY"
            android:textColor="#666666"
            android:textFontWeight="500"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editText_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_quantity"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="number"
            android:text="0"
            android:textColor="#262626"
            android:textFontWeight="400"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/is_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/button_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_boolean" />

            <ImageView
                android:id="@+id/value_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_true"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/button_true"
            android:text="TRUE"
            android:textColor="#262626"
            android:textFontWeight="400"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/button_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_boolean" />

            <ImageView
                android:id="@+id/value_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_true"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/button_false"
            android:text="FALSE"
            android:textColor="#262626"
            android:textFontWeight="400"
            android:textSize="14sp" />


    </RelativeLayout>

    <Button
        android:id="@+id/button_generate"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_below="@+id/is_show"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#1BA9B2"
        android:text="Generate"
        android:textAllCaps="false" />

    <View
        android:id="@+id/shadow_qrcode"
        android:layout_width="270dp"
        android:layout_height="260dp"
        android:layout_below="@+id/button_generate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#F9F9F9" />

    <ImageView
        android:id="@+id/qrcode_placeholder"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/button_generate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />


</RelativeLayout>