<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <RelativeLayout
        android:id="@+id/story_circle"
        android:layout_width="70dp"
        android:layout_height="70dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/story_available"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="0dp"
            fresco:roundAsCircle="true"
            android:src="@drawable/story_background"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_story_profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            fresco:civ_border_width="2dp"
            fresco:civ_border_color="#FAFAFA"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/main_story_username"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/story_circle"
        android:layout_gravity="center"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:text="username"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:ellipsize="end"/>


</RelativeLayout>